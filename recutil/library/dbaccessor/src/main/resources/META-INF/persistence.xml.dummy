            <property name="javax.persistence.jdbc.user" value="username"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.password" value="password"/>
			<!-- ログ表示レベル. ここはALLにしておいて、SLF4J側で絞り込む. -->
			<property name="eclipselink.logging.level" value="ALL" />
			<!-- セッション識別子の表示 -->
			<property name="eclipselink.logging.session" value="true" />
			<!-- コネクション識別子の表示 -->
			<property name="eclipselink.logging.connection" value="true" />
			<!-- SQLパラメータの内容の表示 -->
			<property name="eclipselink.logging.parameters" value="true" />
			<!-- ログはSLF4Jを経由する独自のロガーを使用する -->
			<property name="eclipselink.logging.logger"
				value="recutil.dbaccessor.logbridge.EclipseLinkSessionLog" />
			<property name="eclipselink.validate-existence" value="true" />
			<property name="javax.persistence.query.timeout" value="300" />
			<property
				name="javax.persistence.schema-generation.database.action"
				value="create" />
			<!--テーブル作成/削除用SQLファイルを作成する設定。(mavenでclean->install時に再作成される。) -->
			<property name="eclipselink.ddl-generation"
				value="drop-and-create-tables" />
			<property name="eclipselink.create-ddl-jdbc-file-name"
				value="createDDL_ddlGeneration.jdbc" />
			<property name="eclipselink.drop-ddl-jdbc-file-name"
				value="dropDDL_ddlGeneration.jdbc" />
			<property name="eclipselink.ddl-generation.output-mode"
				value="both" />
			<!-- DBを2個以上書きたい場合は必須。 -->
			<property name="eclipselink.canonicalmodel.subpackage"
				value="two" />
			<property name="eclipselink.ddl-generation"
				value="drop-and-create-tables" />
		</properties>
	</persistence-unit>
</persistence>
